[
  {
    "name": "metashell",
    "git": "https://github.com/sabel83/metashell.git",
    "build": [
      [
        "/bin/bash",
        "-c",
        "git log -1 --pretty=\"%h %B\" | head -1 | sed 's/\\\\/\\\\\\\\/g' | sed 's/\"/\\\\\"/g' | sed 's/^/\"/' | sed 's/$/\\\\n This demo is supported by the Eotvos Lorand University, Faculty of Informatics\"/' > lib/core/version_desc.hpp"
      ],
      ["./build.sh"]
    ],
    "bin": [
      "bin/app/metashell",
      "bin/app/templight_metashell",
      "tools/demo_server/bin/deploy",
      "tools/demo_server/bin/upgrade",
      "tools/demo_server/bin/launch_demo",
      "tools/demo_server/bin/run"
    ],
    "include" : [
      { "src": "3rd/templight/build/lib/clang/3.8.0/include", "dst": "" }
    ],
    "share" : [ { "src": "tools/demo_server/share", "dst": "" } ]
  },

  {
    "name": "boost",
    "git": "https://github.com/boostorg/boost.git",
    "build": [
      ["./bootstrap.sh"],
      ["./b2", "headers"]
    ],
    "include" : [
      { "src": "boost", "dst": "boost" }
    ]
  },

  {
    "name": "headers",
    "git": "https://github.com/sabel83/headers.git",
    "include" : [
      { "src": "headers/boost/*/boost", "dst": "boost", "to_config": "boost" }
    ]
  }
]
